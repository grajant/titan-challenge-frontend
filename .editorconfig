# EditorConfig docs: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


# Config for JS and TS files
[*.{js,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

# Matches the .json and yml files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
